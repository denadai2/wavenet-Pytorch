{
    "name": "WaveNet_Mobility",
    "n_gpu": 0,

    "arch": {
        "type": "WaveNetModel",
        "args": {
            "n_layers": 3,
            "n_blocks": 2,
            "n_dilation_channels": 32,
            "n_residual_channels": 32,
            "n_skip_channels": 256,
            "n_end_channels": 2,
            "n_classes": 2,
            "output_length": 1,
            "kernel_size": 2,
            "bias": true
        }
    },
    "data_loader": {
        "type": "MobilityDataLoader",
        "args":{
            "data_dir": "data/wavenet_mobility.parquet",
            "item_length": 14,
            "target_length": 3,
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 1e-5,
            "amsgrad": true
        }
    },
    "loss": "MSELoss",
    "metrics": [
        "rmse_loss", "haversine"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": true
    }
}
